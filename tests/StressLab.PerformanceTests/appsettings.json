{
  "TestConfiguration": {
    "Name": "Default Performance Test",
    "Description": "Default performance test configuration",
    "TestType": "Api",
    "DurationSeconds": 60,
    "ConcurrentUsers": 10,
    "RampUpSeconds": 10,
    "ApiEndpoint": "https://httpbin.org/get",
    "ApiMethod": "GET",
    "ExpectedResponseTimeMs": 1000,
    "MaxErrorRatePercent": 5.0,
    "ScenarioName": null
  },
  "Scenarios": {
    "FilePath": "scenarios.json",
    "AutoReload": false,
    "ReloadInterval": "00:05:00"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "StressLab": "Debug"
    },
    "Serilog": {
      "MinimumLevel": "Information",
      "WriteTo": [
        {
          "Name": "Console",
          "Args": {
            "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
          }
        },
        {
          "Name": "File",
          "Args": {
            "path": "logs/stresslab-.txt",
            "rollingInterval": "Day",
            "retainedFileCountLimit": 7,
            "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
          }
        }
      ],
      "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
    }
  },
  "PerformanceThresholds": {
    "MaxResponseTimeMs": 2000,
    "MaxErrorRatePercent": 5.0,
    "MinThroughputPerSecond": 10,
    "MaxCpuUsagePercent": 80.0,
    "MaxMemoryUsagePercent": 85.0
  },
  "ReportSettings": {
    "GenerateHtml": true,
    "GenerateJson": true,
    "GenerateCsv": true,
    "OutputDirectory": "reports",
    "IncludeCharts": true,
    "IncludeSystemMetrics": true,
    "TeamCityIntegration": true
  },
  "Database": {
    "ConnectionString": "Server=localhost;Database=StressLab;User Id=sa;Password=YourPassword123!;TrustServerCertificate=true;",
    "DefaultConnectionTimeout": 30,
    "DefaultCommandTimeout": 30,
    "EnableConnectionPooling": true,
    "MaxPoolSize": 100
  },
  "HttpClient": {
    "Timeout": "00:10:00",
    "MaxConnectionsPerServer": 10,
    "EnableRetry": true,
    "RetryCount": 3,
    "RetryDelay": "00:00:01"
  }
}