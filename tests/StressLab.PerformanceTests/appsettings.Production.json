{
  "TestConfiguration": {
    "Name": "Production Performance Test",
    "Description": "Production environment performance test configuration",
    "TestType": "Combined",
    "DurationSeconds": 300,
    "ConcurrentUsers": 50,
    "RampUpSeconds": 30,
    "ApiEndpoint": "https://api.production.com/health",
    "ApiMethod": "GET",
    "ExpectedResponseTimeMs": 500,
    "MaxErrorRatePercent": 1.0,
    "ScenarioName": null
  },
  "Scenarios": {
    "FilePath": "scenarios.production.json",
    "AutoReload": true,
    "ReloadInterval": "00:01:00"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Information",
      "StressLab": "Information"
    },
    "Serilog": {
      "MinimumLevel": "Warning",
      "WriteTo": [
        {
          "Name": "Console",
          "Args": {
            "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
          }
        },
        {
          "Name": "File",
          "Args": {
            "path": "/var/log/stresslab/stresslab-.txt",
            "rollingInterval": "Day",
            "retainedFileCountLimit": 30,
            "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
          }
        }
      ],
      "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
    }
  },
  "PerformanceThresholds": {
    "MaxResponseTimeMs": 1000,
    "MaxErrorRatePercent": 1.0,
    "MinThroughputPerSecond": 100,
    "MaxCpuUsagePercent": 70.0,
    "MaxMemoryUsagePercent": 80.0
  },
  "ReportSettings": {
    "GenerateHtml": true,
    "GenerateJson": true,
    "GenerateCsv": true,
    "OutputDirectory": "/var/reports/stresslab",
    "IncludeCharts": true,
    "IncludeSystemMetrics": true,
    "TeamCityIntegration": true,
    "EmailReports": true,
    "EmailRecipients": ["devops@company.com", "performance@company.com"]
  },
  "Database": {
    "DefaultConnectionTimeout": 15,
    "DefaultCommandTimeout": 15,
    "EnableConnectionPooling": true,
    "MaxPoolSize": 200
  },
  "HttpClient": {
    "Timeout": "00:05:00",
    "MaxConnectionsPerServer": 20,
    "EnableRetry": true,
    "RetryCount": 2,
    "RetryDelay": "00:00:02"
  },
  "Security": {
    "EnableSslVerification": true,
    "AllowedHosts": ["api.production.com", "db.production.com"],
    "ApiKey": "${API_KEY}",
    "DatabasePassword": "${DB_PASSWORD}"
  },
  "Monitoring": {
    "EnableMetrics": true,
    "MetricsEndpoint": "http://prometheus:9090",
    "EnableTracing": true,
    "TracingEndpoint": "http://jaeger:14268"
  }
}