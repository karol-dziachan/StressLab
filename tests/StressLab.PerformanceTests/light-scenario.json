{
  "TestScenarios": [
    {
      "Name": "Light API Test",
      "Description": "Lekki test API z małym obciążeniem",
      "ExecutionMode": "Parallel",
      "LoadSimulation": {
        "Type": "ConstantRate",
        "Rate": 2,
        "DurationSeconds": 15,
        "RampUpSeconds": 3,
        "MaxConcurrentUsers": 5
      },
      "Steps": [
        {
          "Name": "GET Test",
          "Description": "Test GET request",
          "Type": "HttpApi",
          "Weight": 1,
          "Enabled": true,
          "Configuration": {
            "Method": "GET",
            "Url": "https://httpbin.org/get",
            "Headers": {
              "Accept": "application/json",
              "User-Agent": "StressLab/1.0"
            },
            "Timeout": 30000,
            "ExpectedStatusCode": 200
          }
        }
      ],
      "Settings": {
        "ReportGeneration": true,
        "MetricsCollection": true,
        "ErrorThreshold": 5.0
      }
    }
  ],
  "GlobalSettings": {
    "DefaultTimeout": 30000,
    "DefaultRetryCount": 3,
    "DefaultRetryDelay": 1000,
    "MetricsCollectionInterval": 1000,
    "ReportGeneration": {
      "Html": true,
      "Json": true,
      "Csv": true
    },
    "Logging": {
      "Level": "Information",
      "IncludeRequestDetails": true,
      "IncludeResponseDetails": false
    },
    "PerformanceThresholds": {
      "MaxResponseTimeMs": 2000,
      "MaxErrorRatePercent": 5.0,
      "MinThroughputPerSecond": 10
    }
  }
}

